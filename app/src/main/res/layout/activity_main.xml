<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/lab1"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp">



    </LinearLayout>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente_text"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:text="Sistema de Agendamentos de Laboratórios!"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/txtSaldação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Seja Bem-Vindo!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:layout_marginBottom="3.5dp" />



    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColorHint="#2297BC"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="@android:color/white"
        android:hint="Digite seu nome" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:layout_marginTop="05dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente_text"
        android:gravity="center"
        android:padding="5dp"
        android:layout_gravity="bottom">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="© 2025 Todos os direitos reservados."
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:padding="1dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Desenvolvido por: Breno Aguiar e Davi Damasceno"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

</LinearLayout>

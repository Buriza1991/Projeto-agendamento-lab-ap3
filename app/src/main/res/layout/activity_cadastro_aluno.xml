<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lab1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTituloCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Aluno"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/edtNomeCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo"
            android:textColor="#2297BC"
            android:inputType="textPersonName"
            android:textColorHint="#2297BC"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtMatriculaAluno"
            android:layout_width="match_parent"
            android:textColor="#2297BC"
            android:layout_height="wrap_content"
            android:textColorHint="#2297BC"
            android:hint="Matrícula"
            android:inputType="number"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2297BC"
            android:textColorHint="#2297BC"
            android:hint="Idade"
            android:inputType="number"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#2297BC"
            android:hint="Curso"
            android:textColor="#2297BC"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:textColor="#2297BC"
            android:textColorHint="#2297BC"
            android:inputType="phone"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:textColor="#2297BC"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:textColorHint="#2297BC"
            android:inputType="textPostalAddress"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:minLines="2" />

        <Button
            android:id="@+id/btnSalvarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCancelarCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView> 